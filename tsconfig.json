{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@definitions/*": ["./src/definitions/*"],
            "@services/*": ["./src/services/*"]
        }
    },
    "include": ["src/**/*"]
}
